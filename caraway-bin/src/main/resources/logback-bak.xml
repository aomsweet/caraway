<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="io.github.aomsweet.caraway.app.logback.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%d{MM-dd HH:mm:ss:SSS} | %highlight(%-5level) %green([%thread]) %boldMagenta(%logger{36}) - %cyan(%msg %n)</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
